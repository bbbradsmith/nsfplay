OUTDIR ?= output/make
INTDIR ?= intermediate/make
prefix ?= /usr/local/bin

MAKE ?= make
CXX ?= g++
AR ?= ar
MKDIR ?= mkdir -p

CXXFLAGS += -I../include -O3 -Wall -Werror -g
LDFLAGS += -Wl,--fatal-warnings -g
LDFLAGS_CMD += 
LDFLAGS_GUI += 
LDFLAGS_DLL += 

LIB_SUFFIX ?= .a
EXE_SUFFIX ?= .exe
DLL_SUFFIX ?= .dll

LIB_NAME ?= nsfplaycore
CMD_NAME ?= nsfplaycmd
GUI_NAME ?= nsfplay
WINAMP_NAME ?= nsfplug

STRIP_DEBUG = \
  objcopy --only-keep-debug $@ $@.debug ; \
  strip --strip-debug --strip-unneeded $@ ; \
  objcopy --add-gnu-debuglink=$@.debug $@

ifeq ($(OS),Windows_NT)
CXXFLAGS += -municode
LDFLAGS += -static-libgcc
LDFLAGS_CMD += -mconsole
LDFLAGS_GUI += -municode -mwindows
LDFLAGS_DLL += -municode -mdll
endif
